[global]
    ### Display ###
    monitor = 0
    follow = mouse
    
    # Геометрия: ширина 300, отступ 20px от правого верхнего угла
    width = 300
    height = 200
    offset = 20x20
    origin = top-right
    
    # Внешний вид
    transparency = 0
    padding = 15
    horizontal_padding = 15
    frame_width = 2
    frame_color = "#d79921"  # Желтый акцент Gruvbox
    separator_color = frame
    
    # Шрифт
    font = JetBrainsMono Nerd Font 10
    line_height = 0
    format = "<b>%s</b>\n%b"
    
    # Иконки
    icon_position = left
    max_icon_size = 48

[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 5

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 10
    # Можно добавить рамку другого цвета для обычных уведомлений
    frame_color = "#458588" 

[urgency_critical]
    background = "#282828"
    foreground = "#fb4934" # Ярко-красный текст
    frame_color = "#cc241d" # Темно-красная рамка
